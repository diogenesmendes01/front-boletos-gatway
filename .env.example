# Arquivo de Exemplo de Configuração
# ===================================
# Copie este arquivo para .env.local e configure suas variáveis

# Configurações da API
VITE_API_BASE_URL=https://api.envio-boleto.olympiabank.xyz
VITE_API_TIMEOUT=30000

# Modo de desenvolvimento (true para usar mocks)
VITE_MOCK_MODE=false

# Configurações da aplicação
VITE_APP_NAME=Importador de Boletos
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Limites de upload
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_ROWS=2000

# Configurações de polling
VITE_POLLING_INTERVAL=2000
VITE_SSE_RECONNECT_DELAY=5000

# Debug (true para desenvolvimento)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Features
VITE_ENABLE_SSE=true
VITE_ENABLE_RETRY=true
VITE_ENABLE_CACHE=true

# URL padrão para webhook (opcional)
VITE_DEFAULT_WEBHOOK_URL=