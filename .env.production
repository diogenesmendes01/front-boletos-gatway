# Configurações de Produção
# =========================

# API Configuration
VITE_API_BASE_URL=https://api.envio-boleto.olympiabank.xyz
VITE_API_TIMEOUT=30000

# Mock Mode (desabilitado em produção)
VITE_MOCK_MODE=false

# App Configuration
VITE_APP_NAME=Importador de Boletos
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Upload Limits
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_ROWS=2000

# Polling Configuration
VITE_POLLING_INTERVAL=2000
VITE_SSE_RECONNECT_DELAY=5000

# Debug Configuration (desabilitado em produção)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=warn

# Feature Flags
VITE_ENABLE_SSE=true
VITE_ENABLE_RETRY=true
VITE_ENABLE_CACHE=true

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
