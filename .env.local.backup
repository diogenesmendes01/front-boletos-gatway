# Configuração Flexível - Detecta automaticamente o ambiente
# Copie este arquivo para .env.local na raiz do projeto

# API Configuration - Detecta automaticamente
# Em desenvolvimento: deixa vazio para usar localhost
# Em produção: define a URL da API
VITE_API_BASE_URL=http://localhost:3000

# App Configuration
VITE_APP_NAME=Importador de Boletos
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_MOCK_MODE=false
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760
VITE_MAX_ROWS=2000

# Features
VITE_ENABLE_SSE=true
VITE_ENABLE_RETRY=true
VITE_ENABLE_CACHE=true

# Security
VITE_ENABLE_CSP=false
VITE_ENABLE_HSTS=false

# Polling and Reconnection
VITE_POLLING_INTERVAL=2000
VITE_SSE_RECONNECT_DELAY=5000

# Webhook (opcional)
VITE_DEFAULT_WEBHOOK_URL=

